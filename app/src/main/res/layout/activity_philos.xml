<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Pruff.pruff.Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/philos_philos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deep Brief"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000" />



        <LinearLayout
            android:id="@+id/parent_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/philos_philos"
            android:layout_marginTop="30dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/child_lin_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:weightSum="2.5">

                <Button
                    android:id="@+id/apple"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Apple"
                    android:background="@drawable/btn"/>

                <Button
                    android:id="@+id/or1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:text="OR"
                    android:background="@drawable/btn3"/>

                <Button
                    android:id="@+id/android"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Android"
                    android:background="@drawable/btn2"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/child_lin_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:weightSum="2.5">

                <Button
                    android:id="@+id/root"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Rooted"
                    android:background="@drawable/btn"/>

                <Button
                    android:id="@+id/or2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:text="OR"
                    android:background="@drawable/btn3"/>

                <Button
                    android:id="@+id/nonroot"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Non rooted"
                    android:background="@drawable/btn2"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/child_lin_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:weightSum="2.5">

                <Button
                    android:id="@+id/finger"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Fingerprint"
                    android:background="@drawable/btn"/>

                <Button
                    android:id="@+id/or3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:text="OR"
                    android:background="@drawable/btn3"/>

                <Button
                    android:id="@+id/nonfinger"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="No "
                    android:background="@drawable/btn2"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/child_lin_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:weightSum="2.5">

                <Button
                    android:id="@+id/backup"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Backup"
                    android:background="@drawable/btn"/>

                <Button
                    android:id="@+id/or4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:text="OR"
                    android:background="@drawable/btn3"/>

                <Button
                    android:id="@+id/not"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Not"
                    android:background="@drawable/btn2"/>


            </LinearLayout>


            <Button
                android:id="@+id/philos_next"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:background="@drawable/btn_style"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="15dp"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>





    </RelativeLayout>


</RelativeLayout>