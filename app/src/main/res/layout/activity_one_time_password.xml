<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneTimePassword">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/otp_pruff"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pruff" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/otp_pruff"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter otp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/otp_get"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edtext_style"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:inputType="number"/>

        </LinearLayout>

        <Button
            android:id="@+id/verify_otp"
            android:layout_below="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_style"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:text="Verify"/>

        <Button
            android:id="@+id/resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_otp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:text="Resend otp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

    </RelativeLayout>

</RelativeLayout>