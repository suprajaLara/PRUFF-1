<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.pruffap.WaitPage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">


        <ImageView
            android:id="@+id/pruff_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pruff"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/wait_wait"
            android:layout_below="@+id/pruff_logo"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitted"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/wait_desc"
            android:layout_below="@+id/wait_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_desc"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#A09D9D"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wait_desc"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

        <Button
            android:id="@+id/verifyEmail"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Verify email"
            android:background="@drawable/btn_style"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="exit"
            android:background="@drawable/btn_style"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>